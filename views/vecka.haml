!!!
%html
  %head
    %title= "Vecka #{@week}"
    :css
      body {
        font-family: Arial, Verdana, Helvetica;
        background-color: #91C0E1;
        
        margin: 0;
        padding: 0;
      }
      table {
        width: 100%;
        height: 100%;
        text-align: center;
        position: absolute;
        top:0; bottom: 0;
        
        margin: 0;
        padding: 0;
      }
      td {
        vertical-align: middle;
        
        margin: 0;
        padding: 0;
      }
      h1 {
        color: #006DB8;
        font-size: 400px;
        margin: 0;
        padding: 0;
      }
      
  %body
    %table
      %tr
        %td
          %h1= @week
    
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-34398521-1']);
      _gaq.push(['_setDomainName', 'vecka.mu']);
      _gaq.push(['_trackPageview']);
      
      (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
